<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.ShoppingListActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shopping_list"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="@dimen/low_margin"
        android:textColor="@color/black"
        android:textSize="30sp"
        ></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/shopping_list_text_input"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="50dp"></EditText>

        <Button
            android:id="@+id/shopping_list_add_btn"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="Add"
            android:textSize="10sp"
            ></Button>

        <Button
            android:id="@+id/shopping_list_delete_btn"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:text="delete"
            android:textSize="9sp"
            ></Button>


    </LinearLayout>

    <ListView
        android:id="@+id/shopping_list_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/low_margin"
        android:choiceMode="multipleChoice"
        ></ListView>

</LinearLayout>